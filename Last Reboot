select distinct SMS_R_System.Name, SMS_G_System_OPERATING_SYSTEM.LastBootUpTime, SMS_G_System_OPERATING_SYSTEM.Caption from  SMS_R_System inner join SMS_G_System_OPERATING_SYSTEM on SMS_G_System_OPERATING_SYSTEM.ResourceID = SMS_R_System.ResourceId where (DateDiff(day, SMS_G_System_OPERATING_SYSTEM.LastBootUpTime, GetDate()) >1) and SMS_G_System_OPERATING_SYSTEM.Caption like "%windows 10%" or SMS_G_System_OPERATING_SYSTEM.Caption like "%windows 7%" order by SMS_R_System.Name
